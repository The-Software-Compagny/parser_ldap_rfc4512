{
  "name": "@the-software-compagny/parser_ldap_rfc4512",
  "version": "0.0.1",
  "description": "A parser for LDAP RFC 4512",
  "repository": "https://github.com/The-Software-Compagny/parser_ldap_rfc4512.git",
